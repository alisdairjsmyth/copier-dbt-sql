on:
  push:
    branches:
      - master

permissions: read-all

name: release-please

jobs:
  release-please:
    runs-on: ubuntu-latest
    outputs:
      release_created: ${{ steps.release.outputs.release_created }}
      pr: ${{ steps.release.outputs.pr }}
      tag_name: ${{ steps.release.outputs.tag_name }}
      sha: ${{ steps.release.outputs.sha }}
    steps:
      - uses: [[ gha__googleapis__release_please_action ]]
        id: release
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          config-file: release-please-config.json

  update-uv-lock:
    runs-on: ubuntu-latest
    needs: release-please
    if: ${{ needs.release-please.outputs.pr }}
    steps:
      - uses: [[ gha__actions__checkout ]]
        with:
          # We must check out the branch created by release-please
          ref: ${{ fromJson(needs.release-please.outputs.pr).headBranchName }}
          fetch-depth: 0

      - name: Install uv
        uses: [[ gha__astral_sh__setup_uv ]]

      - name: Update uv.lock
        run: |
          uv lock

      - name: Configure git as github-actions[bot]
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"

      - name: Commit uv.lock
        uses: [[ gha__devops_infra__action_commit_push]]
        with:
          github_token: "${{ secrets.GITHUB_TOKEN }}"
          commit_prefix: "chore: "
          commit_message: "update uv.lock"

  deploy-to-dev:
    permissions:
      deployments: write
      contents: read
    needs: release-please
    # Run when release-please did NOT create a release (typical PR merges).
    if: ${{ needs.release-please.outputs.release_created != 'true' }}
    uses: ./.github/workflows/_deploy-reusable.yml
    with:
      environment: dev
      # Deploy the merge commit that just landed on master
      ref: ${{ github.sha }}
      is_tag: false
      production: false
    secrets: inherit

  deploy-to-tst:
    permissions:
      deployments: write
      contents: read
    # This job only runs if the release-please job actually created a release
    needs: release-please
    if: ${{ needs.release-please.outputs.release_created }}
    uses: ./.github/workflows/_deploy-reusable.yml
    with:
      environment: tst
      ref: ${{ needs.release-please.outputs.tag_name }}
      is_tag: true
      production: false
    secrets: inherit

  # ðŸ’¬ Add a comment on the PR about the deployment (DEV or TST)
  comment-deploy:
    needs: [release-please, deploy-to-dev, deploy-to-tst]
    if: ${{ always() }}
    # Run after deploys; it'll decide which flavor to post
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pull-requests: write
    steps:
      - name: Comment on PR with deployment details
        uses: [[ gha__actions__github_script ]]
        env:
          RELEASE_CREATED: ${{ needs.release-please.outputs.release_created }}
          # DEV context (non-release path)
          DEV_RESULT:    ${{ needs.deploy-to-dev.outputs.result }}
          DEV_REF_SHA:   ${{ github.sha }}
          # TST context (release path)
          TST_RESULT:    ${{ needs.deploy-to-tst.outputs.result }}
          TST_TAG_NAME:  ${{ needs.release-please.outputs.tag_name }}
          TST_TAG_SHA:   ${{ needs.release-please.outputs.sha }}
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          script: |
            const { owner, repo } = context.repo;
            const actor = context.actor;
            const workflow = context.workflow;
            const runNumber = context.runNumber;
            const releaseCreated = (process.env.RELEASE_CREATED || '').toLowerCase() === 'true';

            // Pick context based on whether a release was created
            const envName = releaseCreated ? 'tst' : 'dev';
            const result = releaseCreated ? (process.env.TST_RESULT || 'unknown')
                                          : (process.env.DEV_RESULT || 'unknown');

            // Helper: link to the Environment activity log in the repo UI
            const envActivityUrl = `https://github.com/${owner}/${repo}/deployments/activity_log?environment=${encodeURIComponent(envName)}`;
            const workflowRunUrl = `https://github.com/${owner}/${repo}/actions/runs/${process.env.GITHUB_RUN_ID}`;

            // Build ref label and the commit weâ€™ll map to a PR
            let refLabel, refSha;
            if (releaseCreated) {
              refLabel = `${process.env.TST_TAG_NAME} (${process.env.TST_TAG_SHA})`;
              refSha   = process.env.TST_TAG_SHA;
            } else {
              refLabel = process.env.DEV_REF_SHA;
              refSha   = process.env.DEV_REF_SHA;
            }

            // Map commit -> PR (best effort)
            const prsResp = await github.request('GET /repos/{owner}/{repo}/commits/{ref}/pulls', {
              owner, repo, ref: refSha,
              headers: { 'Accept': 'application/vnd.github.groot-preview+json' }
            });
            if (!prsResp.data.length) {
              core.info(`No PR associated with ${refSha}. Skipping comment.`);
              return;
            }
            const prNumber = prsResp.data[0].number;

            // Compose the comment
            let body = `ðŸš€ Deployed to [${envName}](${envActivityUrl})`;
            body += ` by @${actor} via **${workflow}**`;
            body += ` #[${runNumber}](${workflowRunUrl})`;

            // Post the comment
            await github.request('POST /repos/{owner}/{repo}/issues/{issue_number}/comments', {
              owner, repo,
              issue_number: prNumber,
              body
            });
